<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.ashkaran.season8.E04AndroidAsyncHttp"
    android:padding="16dp">

    <EditText
        android:text="@string/defaultUrl"
        android:hint="@string/enterUrl"
        android:inputType="textUri"
        android:id="@+id/urlTxt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/go"
        android:layout_toStartOf="@+id/go" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="48dp"
        android:layout_height="56dp"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
        android:layout_alignParentRight="true"
        android:id="@+id/go"
        android:background="?selectableItemBackgroundBorderless"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/urlTxt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">4

            <TextView
                android:id="@+id/result"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>





    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="130dp"
        android:id="@+id/progressBar"
        android:visibility="gone"/>



</RelativeLayout>
